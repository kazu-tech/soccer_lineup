.wrapper
  = render "header"
.new_form
  試合の登録
.edit-form
  = form_with model: @post, local: true do |form|
    .form_data
      = form.date_field :date, placeholder: :日付
      = form.text_field :match, placeholder: :対戦相手
      = form.text_field :result, placeholder: :結果 
    .form_memo
      = form.select :formation, [["4-4-2", "1"], ["4-5-1", "2"],  ["4-3-3", "3"], ["3-4-3", "4"], ["3-5-2", "5"], ["3-6-1", "6"]], prompt: "フォーメーション選択",class: :game_formation 
      = form.text_area :text, placeholder: :試合メモ（選手交代・得点者など）,class: :game_memo
    .form_menber
      -# %select#myselectbox{:onchange => "myfunc()"}
      -#   %option{:value => "東京"} 東京
      -#   %option{:value => "神奈川"} 神奈川
      -#   %option{:value => "千葉"} 千葉
      -# %p#target
      = render "_new4-4-2"
     
      = form.submit '投稿する', class: :form__btn
  